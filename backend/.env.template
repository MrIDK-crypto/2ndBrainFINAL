# KnowledgeVault Environment Configuration
# Copy this file to .env and fill in your values

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_API_VERSION=2024-12-01-preview
AZURE_CHAT_DEPLOYMENT=gpt-4o
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure Text-to-Speech (Optional - for video narration)
AZURE_TTS_KEY=your_azure_tts_key_here
AZURE_TTS_REGION=eastus2
AZURE_TTS_VOICE=en-US-JennyNeural

# Gamma AI Presentation API (Optional - for video generation)
GAMMA_API_KEY=your_gamma_api_key_here
GAMMA_TEMPLATE_ID=your_template_id_here
GAMMA_THEME_ID=your_theme_id_here

# Pinecone Vector Store (Required)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=knowledgevault

# Database (Optional - defaults to SQLite)
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_vault

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_here
FLASK_DEBUG=false
PORT=5003

# Integration API Keys (Optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
BOX_CLIENT_ID=your_box_client_id_here
BOX_CLIENT_SECRET=your_box_client_secret_here

# LlamaParse (Optional - for document parsing)
LLAMAPARSE_API_KEY=your_llamaparse_key_here
