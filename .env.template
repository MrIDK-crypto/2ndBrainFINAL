#=============================================================================
# Second Brain - Environment Variables Template
#=============================================================================
# Copy this file to .env and fill in your values
# For production deployment, these will be set via Cloud Run environment vars
#=============================================================================

#=============================================================================
# Google Cloud Project (required for deployment)
#=============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

#=============================================================================
# Database Configuration
#=============================================================================
DATABASE_TYPE=postgresql  # Use 'sqlite' for local development
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=secondbrain
POSTGRES_USER=secondbrain
POSTGRES_PASSWORD=your-secure-password

#=============================================================================
# Authentication
#=============================================================================
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-at-least-32-chars

#=============================================================================
# Azure OpenAI (required for LLM features)
#=============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_API_VERSION=2024-12-01-preview
AZURE_CHAT_DEPLOYMENT=gpt-4  # Your deployment name

#=============================================================================
# Azure Speech Services (for voice transcription and TTS)
#=============================================================================
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

#=============================================================================
# Pinecone (Vector Database)
#=============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=secondbrain
PINECONE_ENVIRONMENT=us-east-1  # or your Pinecone environment

#=============================================================================
# Box Integration (for file storage)
#=============================================================================
BOX_CLIENT_ID=your-box-client-id
BOX_CLIENT_SECRET=your-box-client-secret

#=============================================================================
# Slack Integration (for messages)
#=============================================================================
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

#=============================================================================
# LlamaParse (for document parsing)
#=============================================================================
LLAMA_CLOUD_API_KEY=your-llama-cloud-api-key

#=============================================================================
# Gamma API (for presentation generation)
#=============================================================================
GAMMA_API_KEY=your-gamma-api-key

#=============================================================================
# Frontend Configuration
#=============================================================================
NEXT_PUBLIC_API_URL=http://localhost:5003  # Change for production

